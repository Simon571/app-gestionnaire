# ============================================
# CONFIGURATION DE SÉCURITÉ
# ============================================

# Clé de chiffrement (générer une clé sécurisée de 256 bits)
# Générer avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXT_PUBLIC_ENCRYPTION_KEY=your-256-bit-encryption-key-change-in-production

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Ces clés publiques sont OK pour le client
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-with-limited-permissions

# Service role key (JAMAIS exposer au client) - Utiliser côté serveur uniquement
# À placer dans .env.local mais PAS dans .env ou .env.public
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# AUTHENTIFICATION
# ============================================

# Secret JWT (générer avec une clé sécurisée)
# Générer avec: openssl rand -base64 32
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY_HOURS=24

# ============================================
# BASE DE DONNÉES
# ============================================

# URL de connexion à la base de données
DATABASE_URL=postgresql://user:password@localhost:5432/app_gestionnaire

# ============================================
# PAIEMENT (Stripe/PayPal)
# ============================================

# Public key (OK pour exposer)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Secret key (JAMAIS exposer au client)
STRIPE_SECRET_KEY=sk_test_...

# ============================================
# EMAIL
# ============================================

# Configuration pour les notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@app-gestionnaire.com

# ============================================
# ENVIRONNEMENT
# ============================================

NODE_ENV=development
# NODE_ENV=production

# ============================================
# SÉCURITÉ
# ============================================

# Forcer HTTPS en production
NEXT_PUBLIC_FORCE_HTTPS=true

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000

# ============================================
# LOGGING & MONITORING
# ============================================

# Level: 'debug' | 'info' | 'warn' | 'error'
LOG_LEVEL=info

# Sentry pour les erreurs (optionnel)
NEXT_PUBLIC_SENTRY_DSN=https://...

# ============================================
# FONCTIONNALITÉS
# ============================================

# Activer/désactiver les fonctionnalités
NEXT_PUBLIC_ENABLE_GDPR_EXPORT=true
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true
NEXT_PUBLIC_ENABLE_ENCRYPTION=true
